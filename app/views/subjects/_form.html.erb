<%= form_for(@subject) do |f| %>
  <table>
    <tr>
      
      <td>
        <div class="field form-group subjects_left_space">
          <%= f.label :件名 %><br>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </td>
      
          <%= f.fields_for :costs do |costs_form| %>
            <%= render 'cost_fields', f: costs_form %>
          <% end %>
          
          <div class="text-center specification_btn">
            <%= link_to_add_association '明細を追加する', f, :costs, data: { association_insertion_method: 'before' } %>
          </div>
          

          <div class="field form-group remarks_wrapper">
            <%= f.label :原価表・備考欄 %><br>
            <%= f.text_area :remarks, class: 'form-control remarks_area' %>
          </div>
  
  <div class="actions text-center">
    <%= link_to '戻る', subjects_path, class: "btn btn-default" %>
    <%= f.submit '登録', class: 'btn btn-default btn-success visited_white' %>
  </div>
<% end %>